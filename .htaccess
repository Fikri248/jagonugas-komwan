Options -Indexes

RewriteEngine On

# Jika file/folder ada, langsung akses
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Jika request ke root (/), pakai index.php
RewriteRule ^$ index.php [L]

# Selain itu, arahkan ke app.php
RewriteRule ^(.+)$ app.php [QSA,L]

# ===== DEV ONLY: matikan cache biar CSS/JS/IMG selalu fresh =====
<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|webp|ico)$">
    Header always set Cache-Control "no-store, no-cache, max-age=0, must-revalidate"
    Header always set Pragma "no-cache"
    Header always set Expires "0"
  </FilesMatch>
</IfModule>
